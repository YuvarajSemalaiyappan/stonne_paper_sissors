datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id           Int      @id @default(autoincrement())
  player1Name  String
  player2Name  String
  rounds       Json
  player1Score Int
  player2Score Int
  winner       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

